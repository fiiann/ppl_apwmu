<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.mcn.apwmu.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logo2"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/wisuda_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="14dp"
            android:paddingTop="6dp"
            android:paddingBottom="2dp"
            android:paddingEnd="14dp"
            android:background="@drawable/input_background"
            android:layout_marginStart="@dimen/mainActivity"
            android:layout_marginEnd="@dimen/mainActivity"
            android:textColorHint="@color/colorWhite">

            <AutoCompleteTextView
                android:id="@+id/nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIM"
                android:text="24010314120061"
                android:textSize="14dp"
                android:inputType="number"
                android:shadowColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="14dp"
            android:paddingTop="6dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="14dp"
            android:background="@drawable/input_background"
            android:layout_marginStart="@dimen/mainActivity"
            android:layout_marginEnd="@dimen/mainActivity"
            android:textColorHint="@color/colorWhite">

            <EditText
                android:text="admin"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_password"
                android:textSize="14dp"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:shadowColor="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textStyle="bold"
                android:textColorHint="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_sign_in"
            style="?android:textAppearanceSmall"
            android:layout_marginStart="@dimen/mainActivity"
            android:layout_marginEnd="@dimen/mainActivity"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/sign_in_button"
            android:textColor="@color/colorBlack"
            android:text="@string/action_sign_in_short"
            android:textSize="@dimen/btnSignIn" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/tagline2"
            android:layout_gravity="center"
            android:baselineAlignBottom="true"/>


    </LinearLayout>

</LinearLayout>
