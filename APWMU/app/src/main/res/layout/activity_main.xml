<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.mcn.apwmu.MainActivity">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/logo2"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="30dp"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_marginStart="@dimen/mainActivity"
        android:layout_marginEnd="@dimen/mainActivity"
        android:layout_below="@id/logo2"
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heightHome"
        android:clickable="true"
        android:onClick="go_to_login"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_login"
        android:layout_marginTop="50dp"/>

    <ImageButton
        android:layout_marginStart="@dimen/mainActivity"
        android:layout_marginEnd="@dimen/mainActivity"
        android:id="@+id/btn_cari_wisudawan"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heightHome"
        android:clickable="true"
        android:onClick="cariJadwalWisuda"
        android:layout_marginTop="@dimen/btnMarginHome"
        android:background="@drawable/button_jadwal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_login" />

    <ImageButton
        android:layout_marginStart="@dimen/mainActivity"
        android:layout_marginEnd="@dimen/mainActivity"
        android:id="@+id/btn_jadwal_wisuda"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heightHome"
        android:clickable="true"
        android:onClick="cariWisudawanHalaman"
        android:background="@drawable/button_cari"
        android:layout_below="@id/btn_cari_wisudawan"
        android:layout_marginTop="@dimen/btnMarginHome"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:src="@drawable/tagline2"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"/>
</RelativeLayout>
